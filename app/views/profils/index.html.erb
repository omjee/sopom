<div class ="jumbotron">
  <h2>Yelpdemo is the best way to find reviews on local restaurants.</h2>
  <h3>Explore the favorite diners, pastry shops, and eateries in your community.
  <br>Leave reviews and ratings for your fellow foodies.</h3>
  <div class ="filter">
      <%= form_tag search_path, class:"form-inline", method: :get do %>
        <div class="form-group">
          <%= label_tag :ville %>
          <%= 
          select_tag(:ville, options_from_collection_for_select(Profil.select(:ville).distinct, :ville, :ville, params[:ville]), {class: "form-control"})%>
        </div>
        <div class="form-group">
          <%= label_tag :sexe %>
          <%= text_field_tag :sexe, params["sexe"], class: "form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :codePostal %>
          <%= text_field_tag :codePostal, params["codePostal"], class: "form-control"  %>
        </div>
          <%= submit_tag "Trouver", class: "btn btn-primary" %>
      <% end %>
    </div>
</div>
<div class="center">
  <div class="row">
    <% @profils.each do |profil| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(profil.image.url),profil %>
          <div class="caption"><h3><%= profil.prenom %></h3></div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Prenom</th>
      <th>Sexe</th>
      <th>Age</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Website</th>
      <th>Codepostal</th>
      <th>Ville</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profils.each do |profil| %>
      <tr>
        <td><%= profil.prenom %></td>
        <td><%= profil.sexe %></td>
        <td><%= profil.age %></td>
        <td><%= profil.phone %></td>
        <td><%= profil.address %></td>
        <td><%= profil.website %></td>
        <td><%= profil.codePostal %></td>
        <td><%= profil.ville %></td>
        <td><%= link_to 'Show', profil, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_profil_path(profil), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', profil, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profil', new_profil_path, class: "btn btn-link" %>

